<turbo-frame id="memo-list">
  <div class="flex flex-col w-auto h-full mx-2 mt-2 rounded-[20px] bg-white">
    <div class="flex justify-between items-center">
      <p class="font-nunito text-xl font-extrabold text-text-black mt-4 ms-2">All Staff</p>
      <div class="flex justify-end me-2">
        <%= form_with url: staff_index_path, method: :get, data: { controller: "pagingUpdate", action: "change->pagingUpdate#update" }, local: true do |form| %>
          <label for="per_page" class="text-sm font-nunito">Staff per page: </label>
          <%= form.select :per_page, options_for_select([5, 10, 25, 50], selected: params[:per_page]), {}, class: "border border-light-gray rounded-md p-1" %>
        <% end %>
      </div>
    </div>

    <!-- Wrapping the table in a turbo-frame -->
    <div class="overflow-auto">
      <table class="table-auto mt-2 me-4 w-full">
        <thead>
        <tr class="border-b border-[#DDDDDD] h-8">
          <th class="text-[#505050] text-xs font-extrabold font-nunito">S/N</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Staff ID</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Firstname</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Lastname</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">E-Mail</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Phone</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Address</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Role</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Salary</th>
        </tr>
        </thead>
        <tbody>
        <% @staff.each do |staff| %>
          <tr class="border-b border-[#DDDDDD] h-8">
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.sn %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.staff_id %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.firstname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.lastname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.email %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.phone_no %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.address %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.role %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= staff.salary %></td>
            <td class="text-accent-blue text-center text-sm font-normal font-nunito leading-normal">
              <%= link_to 'View more', staff_path(staff) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination links -->
    <div class="flex justify-center mt-4">
      <%= paginate @staff, params: { turbo_frame: 'memo-list' } %>
    </div>
  </div>

</turbo-frame>