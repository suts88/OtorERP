<div class="flex justify-center w-full md:w-[562px] h-auto md:h-[327px] rounded-[20px] bg-white mt-1 ms-6 mb-2">
  <div class="flex flex-col w-full max-w-[500px] ms-4 mt-2">
    <p class="font-nunito text-xl font-extrabold text-text-black mt-4">Procurement</p>
    <div class="overflow-y-auto">
      <table class="table-auto mt-2 me-4 w-full">
        <thead>
        <tr class="border-b border-[#DDDDDD] h-8">
          <th class="text-[#505050] text-xs font-extrabold font-nunito">S/N</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Itemname</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Requested By</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Total Amount</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Status</th>
        </tr>
        </thead>
        <tbody>
        <% @procurement_items.each_with_index do |pi, index| %>
          <tr class="border-b border-[#DDDDDD] h-8">
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= index + 1 %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= pi.itemname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= pi.requested_by.firstname %> <%= pi.requested_by.lastname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= pi.total_amount %></td>
            <td class="text-center text-sm font-normal font-nunito leading-normal
                <%= if pi.status == 'Approved'
                                             'text-approved-green'
                    else
                      pi.status == 'Pending' ? 'text-pending-yellow' : 'text-rejected-red'
                    end %>">
              <%= pi.status %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
