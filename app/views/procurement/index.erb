<%= render "dashboard/menu" %>
<turbo-frame id="memo-list">
  <div class="flex flex-col w-auto h-full mx-2 mt-2 rounded-[20px] bg-white">
    <div class="flex justify-between items-center">
      <p class="font-nunito text-xl font-extrabold text-text-black mt-4 ms-2">Procurement</p>
      <div class="flex justify-end me-2">
        <%= form_with url: procurement_index_path, method: :get, data: { controller: "pagingUpdate", action: "change->pagingUpdate#update" }, local: true do |form| %>
          <label for="per_page" class="text-sm font-nunito">Items per page: </label>
          <%= form.select :per_page, options_for_select([5, 10, 25, 50], selected: params[:per_page]), {}, class: "border border-light-gray rounded-md p-1" %>
        <% end %>
      </div>
    </div>

    <!-- Wrapping the table in a turbo-frame -->
    <div class="overflow-auto">
      <table class="table-auto mt-2 me-4 w-full">
        <thead>
        <tr class="border-b border-[#DDDDDD] h-8">
          <th class="text-[#505050] text-xs font-extrabold font-nunito">S/N</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Itemname</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Price</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Quantity</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Total Amount</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Requested By</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Sent To</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Date</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Status</th>
          <th class="text-[#505050] text-xs font-extrabold font-nunito">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @proc.each do |proc| %>
          <tr class="border-b border-[#DDDDDD] h-8">
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.sn %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.itemname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.price %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.quantity %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.total_amount %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.requested_by.firstname %> <%= proc.requested_by.lastname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.sent_to.firstname %> <%= proc.sent_to.lastname %></td>
            <td class="text-text-black text-center text-sm font-normal font-nunito leading-normal"><%= proc.date %></td>
            <td class="text-center text-sm font-normal font-nunito leading-normal
                <%= if proc.status == 'Approved'
                                             'text-approved-green'
                    else
                      proc.status == 'Pending' ? 'text-pending-yellow' : 'text-rejected-red'
                    end %>">
              <%= proc.status %>
            </td>
            <td class="text-accent-blue text-center text-sm font-normal font-nunito leading-normal">
              <%= link_to 'View more', procurement_path(proc) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination links -->
    <div class="flex justify-center mt-4">
      <%= paginate @proc, params: { turbo_frame: 'memo-list' } %>
    </div>
  </div>

</turbo-frame>