<div class="grid gap-0 grid-cols-2 grid-rows-1 gap-0 h-full min-h-screen">
  <div class="mt-10 ">
    <%= render 'landing/header' %>
    <div class="md:ms-24 ms-16 md:mt-16 mt-10">
      <div class="w-[350px] mb-10">
        <p class="font-nunito font-normal text-sm text-text-gray">Hey!!</p>
        <p class="font-nunito font-extrabold text-[28px] text-text-black">Please Sign Up</p>
        <p class="font-nunito font-normal text-sm text-text-gray leading-normal">
          Enter your Details. All Fields are required.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Full Name Field -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :full_name, "Full Name", class: "mb-36 font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.text_field :full_name, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray" %>
          </div>
        </div>

        <!-- Department Dropdown -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :department, "Department", class: "font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.select :department, options_for_select(User.departments.keys.map { |d| [d.titleize, d] }), {}, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray" %>
          </div>
        </div>

        <!-- Image Upload Field -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :image, "Profile Image", class: "font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.file_field :image, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray" %>
          </div>
        </div>

        <!-- Email Field -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :email, "Email address", class: "mb-36 font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.email_field :email, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray ", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <!-- Password Field -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :password, class: "font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.password_field :password, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray", autocomplete: "current-password" %>
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div class="field mb-4">
          <div class="mb-4">
            <%= f.label :password_confirmation, class: "font-nunito font-normal text-sm text-text-black" %><br/>
          </div>
          <div>
            <%= f.password_field :password_confirmation, class: "w-[350px] h-[50px] rounded-[10px] bg-[#f8fafc] border border-light-gray", autocomplete: "current-password" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="actions mt-10 w-[350px] h-[50px]">
          <%= f.submit "Sign up", class: "w-full h-full p-2.5 bg-gradient-to-br from-accent-blue to-gradient-violet text-white text-sm font-normal font-nunito leading-normal rounded-[10px] hover:bg-gradient-to-bl focus:outline-none transition duration-300 ease-in-out" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
  <div class="w-full h-full">
    <%= image_tag('register.jpg', class: "w-full h-full object-cover hidden custom-md:block") %>
  </div>
</div>
